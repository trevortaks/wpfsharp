<Window x:Class="instasharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:instasharp"
        xmlns:lib="clr-namespace:instasharp.Views"
        Title="InstaWPF" Height="750" Width="1250">
    
    <Window.Resources>
        <vm:ViewModel x:Key="_model"/>
        <vm:joinConverter x:Key="joinConverter" />
        <!--<vm:MainView x:Key="MainView"></vm:MainView>-->
        <DataTemplate x:Key="MainView" DataType="{x:Type vm:ViewModel}">
            <vm:MainView/>
        </DataTemplate>
        <DataTemplate x:Key="ProfileView" DataType="{x:Type vm:ViewModel}" >
            <lib:ProfileView />
        </DataTemplate>
        <DataTemplate x:Key="ActivityView" DataType="{x:Type vm:ViewModel}" >
            <lib:ActivityView />
        </DataTemplate>
        <DataTemplate x:Key="ExploreView" DataType="{x:Type vm:ViewModel}" >
            <lib:ExploreView />
        </DataTemplate>
        <DataTemplate x:Key="MessageView" DataType="{x:Type vm:ViewModel}" >
            <lib:MessageView />
        </DataTemplate>
        <DataTemplate x:Key="SidebarView" DataType="{x:Type vm:ViewModel}">
            <vm:SidebarView />
        </DataTemplate>
    </Window.Resources>
    
    <Window.CommandBindings>
        <CommandBinding Command="MediaCommands.Play" Executed="Play_Executed" />
        <!--<CommandBinding Command="MediaCommands.Pause" Executed="Pause_Executed" />
        <CommandBinding Command="MediaCommands.Stop" Executed="Stop_Executed" />
        <CommandBinding Command="{Binding RelativeSource= {RelativeSource AncestorType={x:Type ItemsControl}}, Path=DataContext.Like}" 
                        Executed="DataContext.LikeMedia" 
                        />-->
    </Window.CommandBindings>

    <Grid Background="#000" Name="gridHome" >
        
        <Popup Name="ppLogin" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Grid>
                <Grid.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="AliceBlue" Offset="0"></GradientStop>
                        <GradientStop Color="Aqua" Offset="1"></GradientStop>
                    </RadialGradientBrush>
                </Grid.Background>
                <Label Content="Instagram" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="123" FontSize="24" FontFamily="MV Boli"/>
                <Label Content="Username" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="99" Height="38" FontSize="18"/>
                <Label Content="Password" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Height="25"/>
                <TextBox Name="txtUsername" HorizontalAlignment="Left" Height="25" Margin="279,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150"/>
                <PasswordBox Name="txtPassword" HorizontalAlignment="Left" Height="25" Margin="279,136,0,0" VerticalAlignment="Top" Width="150" />
                <Label x:Name="lblStatus" x:FieldModifier="public" Content="" HorizontalAlignment="Left" Margin="110,179,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
                <Button Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="186,230,0,0" VerticalAlignment="Top" Width="97" Height="43"/>


            </Grid>
        </Popup>
        
        <DockPanel x:Name="dpDock">

            <ContentControl DockPanel.Dock="Left" Name="ccSidebar" ContentTemplate="{StaticResource SidebarView}" 
                           Content="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type DockPanel}}}"/>

            <ContentControl DockPanel.Dock="Left" Name="ccMainPanel" 
                            Content="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type DockPanel}}}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <!--<Setter Property="ContentTemplate" Value="{StaticResource MainView}"></Setter>-->
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding selectedView}" Value="1">
                                <Setter Property="ContentTemplate" Value="{StaticResource MainView}"></Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding selectedView}" Value="2">
                                <Setter Property="ContentTemplate" Value="{StaticResource ProfileView}"></Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding selectedView}" Value="3">
                                <Setter Property="ContentTemplate" Value="{StaticResource ActivityView}"></Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding selectedView}" Value="4">
                                <Setter Property="ContentTemplate" Value="{StaticResource ExploreView}"></Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding selectedView}" Value="5">
                                <Setter Property="ContentTemplate" Value="{StaticResource MessageView}"></Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
            
        </DockPanel>
    </Grid>
</Window>
