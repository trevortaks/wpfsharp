<Window x:Class="instasharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:instasharp"
        xmlns:lib="clr-namespace:instasharp;assembly=instasharp"
        Title="InstaWPF" Height="750" Width="1250">
    
    <Window.Resources>
        <!--<vm:ViewModel x:Key="viewModel"/>-->
        <vm:joinConverter x:Key="joinConverter" />
        <!--<vm:MainView x:Key="MainView"></vm:MainView>-->
        <DataTemplate x:Key="MainView" DataType="{x:Type vm:ViewModel}" >
            <vm:MainView />
        </DataTemplate>
    </Window.Resources>
    
    <Window.CommandBindings>
        <CommandBinding Command="MediaCommands.Play" Executed="Play_Executed" />
        <!--<CommandBinding Command="MediaCommands.Pause" Executed="Pause_Executed" />
        <CommandBinding Command="MediaCommands.Stop" Executed="Stop_Executed" />
        <CommandBinding Command="{Binding RelativeSource= {RelativeSource AncestorType={x:Type ItemsControl}}, Path=DataContext.Like}" 
                        Executed="DataContext.LikeMedia" 
                        />-->
    </Window.CommandBindings>

    <Grid Background="#000" Name="gridHome" >
        

        <Popup Name="ppLogin" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Grid>
                <Grid.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="AliceBlue" Offset="0"></GradientStop>
                        <GradientStop Color="Aqua" Offset="1"></GradientStop>
                    </RadialGradientBrush>
                </Grid.Background>
                <Label Content="Instagram" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="123" FontSize="24" FontFamily="MV Boli"/>
                <Label Content="Username" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="99" Height="38" FontSize="18"/>
                <Label Content="Password" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Height="25"/>
                <TextBox Name="txtUsername" HorizontalAlignment="Left" Height="25" Margin="279,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150"/>
                <PasswordBox Name="txtPassword" HorizontalAlignment="Left" Height="25" Margin="279,136,0,0" VerticalAlignment="Top" Width="150" />
                <Label x:Name="lblStatus" x:FieldModifier="public" Content="" HorizontalAlignment="Left" Margin="110,179,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
                <Button Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="186,230,0,0" VerticalAlignment="Top" Width="97" Height="43"/>


            </Grid>
        </Popup>
        <!--<Label Content="Instagram" Height="60" Margin="0,0,0,675" HorizontalContentAlignment="Center" 
               FontSize="20" Panel.ZIndex="1" Background="#ddd" VerticalContentAlignment="Top"/> -->
        <DockPanel x:Name="dpDock">
            
            <Grid x:Name="gdMenu" Background="#dedede" HorizontalAlignment="Left" 
                  Height="720" VerticalAlignment="Top" DockPanel.Dock="Left">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Width" Value =" 180"></Setter>
                        
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding showMenu}" Value="false">
                                <Setter Property="Width" Value="60"></Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                    
                </Grid.Style>
                
                <StackPanel VerticalAlignment="Top">
                    <Button Background="Transparent" BorderBrush="Transparent" HorizontalContentAlignment="Left"
                            Command="{Binding DataContext.collapseMenu, RelativeSource={RelativeSource AncestorType={x:Type DockPanel}}}"
                            CommandParameter="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type DockPanel}}}">
                        <StackPanel Orientation="Vertical">
                            <Rectangle Height="3" Fill="Black" Margin="10, 10, 0, 7" Width="50" HorizontalAlignment="Left"/>
                            <Rectangle Height="3" Fill="Black" Margin="10, 0, 0, 7" Width="50" HorizontalAlignment="Left"/>
                            <Rectangle Height="3" Fill="Black" Margin="10, 0, 0, 7" Width="50" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Button>
                    
                    <StackPanel Height="75" Orientation="Horizontal" >
                        
                        <Ellipse Width="50" Height="50" Margin="10, 0, 0, 0">
                            
                            <Ellipse.Fill>
                                
                                <ImageBrush ImageSource="/assets/image.jpg"/>
                                
                            </Ellipse.Fill>
                            
                        </Ellipse>
                        
                        <Label x:Name="btnUsername" Content="trevortaks" VerticalAlignment="Center"
            								    Height="50" Margin="10,10,0,0" FontWeight="Bold" />
                    </StackPanel>

                    <Rectangle Height="1" Fill="Black" HorizontalAlignment="Stretch"/>

                    <StackPanel Margin="0, 20, 0 ,0">
                        
                        <Label Height="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontFamily="{StaticResource FontAwesome}">
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Text=" &#xF015;" FontFamily="{StaticResource FontAwesomeSolid}" FontSize="30"></TextBlock>
                                <TextBlock Text="  Home" FontSize="20" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>
                        </Label>
                        
                        <Label Height="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontFamily="{StaticResource FontAwesome}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text=" &#xF004;" FontFamily="{StaticResource FontAwesomeRegular}" FontSize="30"></TextBlock>
                                <TextBlock Text="  Activity" FontSize="20" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>
                        </Label>
                        
                        <Label Height="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontFamily="{StaticResource FontAwesome}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text=" &#xF279;" FontFamily="{StaticResource FontAwesomeRegular}" FontSize="30"></TextBlock>
                                <TextBlock Text="  Explore" FontSize="20"></TextBlock>
                            </StackPanel>
                        </Label>
                        
                        <Label Height="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontFamily="{StaticResource FontAwesome}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text=" &#xF1D8;" FontFamily="{StaticResource FontAwesomeRegular}" FontSize="30"></TextBlock>
                                <TextBlock Text="  Messaging" FontSize="20"></TextBlock>
                            </StackPanel>
                        </Label>
                        
                    </StackPanel>
                    
                </StackPanel>
                                

            </Grid>
            
            <ContentControl Content="MainView" DockPanel.Dock="Left" ContentTemplate="{StaticResource MainView}"/>
            
        </DockPanel>
    </Grid>
</Window>
